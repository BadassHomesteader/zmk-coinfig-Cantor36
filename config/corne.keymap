#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

// ------------------------------------------------------------------------------------------------------------------------------------------------------------------
// LAYERS
// ------------------------------------------------------------------------------------------------------------------------------------------------------------------
#define DEFAULT 0
#define NUM   1
#define BT   2
#define SYM   3




// ------------------------------------------------------------------------------------------------------------------------------------------------------------------
// Mod Tap
// ------------------------------------------------------------------------------------------------------------------------------------------------------------------
&mt {
    tapping-term-ms = <300>;
};

// ------------------------------------------------------------------------------------------------------------------------------------------------------------------
// Tap Dance
// ------------------------------------------------------------------------------------------------------------------------------------------------------------------
/ {
    behaviors {
        hm: homerow_mods {
          compatible = "zmk,behavior-hold-tap";
          label = "HOMEROW_MODS";
          #binding-cells = <2>;
          tapping-term-ms = <400>;
          quick-tap-ms = <0>;
          flavor = "tap-preferred";
          bindings = <&kp>, <&kp>;
        };

        td0: tap_dance_0 {
            compatible = "zmk,behavior-tap-dance";
            label = "TAP_DANCE_0";
            #binding-cells = <0>;
            tapping-term-ms = <200>;
            bindings = <&kp N1>, <&kp N2>, <&kp N3>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
                &td0
            >;
        };
    };
};

// ------------------------------------------------------------------------------------------------------------------------------------------------------------------
// Hold-Tap Behavior
// ------------------------------------------------------------------------------------------------------------------------------------------------------------------


// ------------------------------------------------------------------------------------------------------------------------------------------------------------------
// Combos
// ------------------------------------------------------------------------------------------------------------------------------------------------------------------
/ {
  combos {
    compatible = "zmk,combos";

    combo_esc {
      timeout-ms = <50>;
      key-positions = <3 4 5>;
      bindings = <&kp ESC>;
    };

    combo_tab {
      timeout-ms = <50>;
      key-positions = <2 3 4>;
      bindings = <&kp TAB>;
    };

    combo_tab2 {
      timeout-ms = <50>;
      key-positions = <15 16 17>;
      bindings = <&kp TAB>;
    };

  };
};

// ------------------------------------------------------------------------------------------------------------------------------------------------------------------
// Layer
// ------------------------------------------------------------------------------------------------------------------------------------------------------------------

/ {
        keymap {
                compatible = "zmk,keymap";

                default_layer {
                        bindings = <
//      ╭─────────────┬─────────────┬─────────────┬─────────────┬─────────────╮                              ╭─────────────┬─────────────┬─────────────┬─────────────┬─────────────╮
//      |      Q      |     W       |      E      |      R      |     T       |                              |      Y      |     U       |     I       |      O      |     '       | 
&none        &kp Q        &kp W         &kp E          &kp R         &kp T                                         &kp Y         &kp U        &kp I         &kp O        &kp SEMI        &none
//      ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤                              ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤
//      |      A      |      S      |      D      |      F      |     G       |                              |      H      |     J       |     K       |      L      |     P       |  
&none      &kp A        &hm LGUI S    &hm LALT D   &hm LCTRL F         &kp G                                      &kp H      &hm RCTRL J    &hm RALT K     &hm RGUI L       &kp P        &none
//      ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤                              ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤
//      |      Z      |      X      |      C      |      V      |      B      |                              |      N      |     M       |     ,       |       .     |      ?      | 
&none        &kp Z         &kp X         &kp C         &kp V         &kp B                                        &kp N         &kp M       &kp COMMA       &kp DOT     &kp QMARK        &none
//      ╰─────────────┴─────────────┼─────────────┼─────────────┼─────────────┬─────────────╮  ╭─────────────┼─────────────┼─────────────┼─────────────┼─────────────┴─────────────╯
//                                                |    Shift    |     Num     |    Enter    |  |    Space    |     Bksp    |     ?       |
                                                     &kp LSHIFT     &mo NUM       &kp RET      &kp SPACE    &mt LC(BSPC) BSPC &mt LSHIFT A
//                                                ╰─────────────┴─────────────┴─────────────╯  ╰─────────────┴─────────────┴─────────────╯
                        >;
                };

                num_layer {
                        bindings = <
//      ╭─────────────┬─────────────┬─────────────┬─────────────┬─────────────╮                              ╭─────────────┬─────────────┬─────────────┬─────────────┬─────────────╮
//      |             |             |      _      |      =      |     5       |                              |      6      |     7       |     8       |      9      |     10      |      
&none       &none        &none       &none         &none         &none                                      &kp N7         &kp N8        &kp N9         &none        &none        &none
//      ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤                              ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤
//      |             |             |      *      |      +      |     17      |                              |      18     |     19      |     20      |      21     |     22      |      
&none       &none        &none         &none        &none         &none                                     &kp N4      &kp N5            &kp N6       &none       &none          &none
//      ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤                              ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤
//      |      25     |      26     |      /      |      -      |     29      |                              |      1      |     2       |     3       |      33     |     34      |      

&none       &none         &none         &none         &none         &none                                    &kp N1         &kp N2          &kp N3       &none     &none        &none
//      ╰─────────────┴─────────────┼─────────────┼─────────────┼─────────────┬─────────────╮  ╭─────────────┼─────────────┼─────────────┼─────────────┼─────────────┴─────────────╯
//                                                |      36     |     37      |     38      |  |     39      |      40     |     41      |

                                                     &trans        &trans       &trans              &trans      &trans         &kp N0
//                                                ╰─────────────┴─────────────┴─────────────╯  ╰─────────────┴─────────────┴─────────────╯

                        >;
                };

                bt_layer {
// ------------------------------------------------------------------------------------------------------------------------------------------------------------------
// |  TAB |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | BKSP |
// | BTCLR| BT1 | BT2 | BT3 | BT4 | BT5 |   | LFT | DWN |  UP | RGT |     |      |
// | SHFT |     |     |     |     |     |   |     |     |     |     |     |      |
//                    | GUI |     | SPC |   | ENT |     | ALT |
                        bindings = <
   &kp TAB    &kp N1       &kp N2       &kp N3       &kp N4       &kp N5         &kp N6   &kp N7   &kp N8 &kp N9    &kp N0 &kp BSPC
   &bt BT_CLR &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &bt BT_SEL 4   &kp LEFT &kp DOWN &kp UP &kp RIGHT &trans &trans
   &kp LSHFT  &trans       &trans       &trans       &bt BT_NXT       &bt BT_CLR         &trans   &trans   &trans &trans    &trans &trans
                                    &kp LGUI     &trans       &kp SPACE      &kp RET  &trans   &kp RALT
                        >;
                };

                sym_layer {
// ------------------------------------------------------------------------------------------------------------------------------------------------------------------
// |  TAB |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BKSP |
// | CTRL |     |     |     |     |     |   |  -  |  =  |  [  |  ]  |  \  |  `   |
// | SHFT |     |     |     |     |     |   |  _  |  +  |  {  |  }  | "|" |  ~   |
//                    | GUI |     | SPC |   | ENT |     | ALT |
                        bindings = <
   &kp  TAB  &kp EXCL &kp AT &kp HASH &kp DLLR &kp PRCNT   &kp CARET &kp AMPS  &kp KP_MULTIPLY &kp LPAR &kp RPAR &kp BSPC
   &kp LCTRL &trans   &trans &trans   &trans   &trans      &kp MINUS &kp EQUAL &kp LBKT        &kp RBKT &kp BSLH &kp GRAVE
   &kp LSHFT &trans   &trans &trans   &trans   &trans      &kp UNDER &kp PLUS  &kp LBRC        &kp RBRC &kp PIPE &kp TILDE
                             &kp LGUI &trans   &kp SPACE   &kp RET   &trans    &kp RALT
                        >;
                };
        };
};

